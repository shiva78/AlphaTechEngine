
@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_template.cshtml";
}
@section stylesheet {
    <link href="~/css/Services.css" rel="stylesheet" />
}
@section script {
    <script src="~/js/jquery.visible.min.js"></script>
    <script>
        $(window).ready(function () {
            if ($(window).width() <= 750) {
                $('#webDesignImage').insertBefore('#webDesignContent');
                $('#otherServicesImage').insertBefore('#otherServicesContent');
            }
            if ($('#webConsultation').visible(true)) {
                $('#webConsultation .section-content .row').addClass('inRight');
            }
            //for small screen when it is not visible
            var link = window.location.href;
            if (link.indexOf("webConsultation") >= 0) {
                $('#webConsultation .section-content .row').addClass('inRight');
            }
            if (link.indexOf("webDesignandDevelopment") >= 0) {
                $('#webDesignandDevelopment .section-content .row').addClass('inRight');
            }

            if (link.indexOf("contentDevelopmentandCopywriting") >= 0) {
                $('#contentDevelopmentandCopywriting .section-content .row').addClass('inRight');
            }
            if (link.indexOf("otherServices") >= 0) {
                $('#otherServices .section-content .row').addClass('inRight');
            }           

        });
        $(window).scroll(function () {
            if ($('#webConsultation').visible(true)) {
                $('#webConsultation .section-content .row').addClass('inRight');
            }
            if ($('#webDesignandDevelopment').visible(true)) {
                $('#webDesignandDevelopment .section-content .row').addClass('inLeft');
            }
            if ($('#contentDevelopmentandCopywriting').visible(true)) {
                $('#contentDevelopmentandCopywriting .section-content .row').addClass('inRight');
            }
            if ($('#otherServices').visible(true)) {
                $('#otherServices .section-content .row').addClass('inLeft');
            }
        });
    </script>
}

@section banner {
    <div class="banner w-100">
        <img src="~/Images/Services.png" alt="services" />
        <div class="bannerOverlay"></div>
        <div class="tagLine">
            <h2><span>Services:</span></h2>
            <p><span>With our intellectual team we can always offer the best digital solutions your business may require. Talk to us and we can discuss the ways we could assist you.</span></p>
        </div>
    </div>
}
<h1 class="hiddenHeader">Our Services</h1>
