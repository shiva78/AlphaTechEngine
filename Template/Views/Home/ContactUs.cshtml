@model Template.Models.Contactus
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_template.cshtml";
}

@section stylesheet {
<link href="~/css/Services.css" rel="stylesheet" />
}

@section banner {
    <div id="contactBanner" class="banner w-100">
        <img src="~/Images/contact-us.png" alt="contact us" />
        <div class="bannerOverlay"></div>
        <div class="tagLine">
            <h2><span>Contact Us:</span></h2>
            <p><span>Thank you for your interest, please fill the form below to understand you better.</span></p>
        </div>
    </div>
}
<h1 class="hiddenHeader">Contact Us</h1>
<div id="contactUs" class="w-100">
    <div class="tintedBackground"></div>
    <div class="section-content">      

        @*<h4 style="border-bottom: 1px solid #00b6dd; padding-bottom: 10px;">Contact Us</h4>*@
        <form asp-action="ContactUs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    @*<p>Thank you for your interest, please fill the form below to understand you better.</p>*@
                    <p><span style="color: green;">@ViewData["message"]</span><span style="color: red;">@ViewData["errormessage"]</span></p>
                </div>
                <div class="col-md-8">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="fullname">Full name </label>
                            <input asp-for="fullname" type="text" class="form-control" id="fullName" placeholder="Firstname Lastname" required />
                            <span asp-validation-for="fullname" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="emailaddress">Email</label>
                            <input asp-for="emailaddress" type="email" class="form-control" id="email" placeholder="email@example.com" required />
                            <span asp-validation-for="emailaddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label asp-for="city">City</label>
                            <input asp-for="city" type="text" class="form-control" id="city" placeholder="City" required />
                            <span asp-validation-for="city" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="state">State</label>
                            @*<input type="text" class="form-control" id="state" placeholder="state" required />*@
                            <select asp-for="state" id="state" class="form-control">
                                <option value="ACT">ACT</option>
                                <option value="NSW">NSW</option>
                                <option value="NT">NT</option>
                                <option value="QLD" selected="selected">QLD</option>
                                <option value="SA">SA</option>
                                <option value="TAS">TAS</option>
                                <option value="VIC">VIC</option>
                                <option value="WA">WA</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="phone">Phone number</label>
                            <input asp-for="phone" type="number" class="form-control" id="phone" placeholder="Enter phone number" minlength="10" required />
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="message">Message</label>
                        <textarea asp-for="message" class="form-control" id="message" rows="5" placeholder="Briefly tell us what you are interested in."></textarea>
                        <span asp-validation-for="message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section script {
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script>
    $(window).ready(function() {
        $('form').validate();
        $("#phone").on("change paste keyup keypress", function (e) {
            if ($(this).val().length == 10) {
                return false;                
            }
        });
    });
</script>
}
